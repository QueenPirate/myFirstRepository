<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rdBtn{
			margin-top: 36px;
		}	
		.row{
			margin-bottom: 0px;
		}
		.remove{
			color: red;
			margin-top: 36px;
		}

	</ui:style>
	<m:MaterialRow addStyleNames="{style.row}">
		<m:MaterialRadioButton ui:field="rbCorrectAnswer" name="choices" grid="s1 m1 l1" addStyleNames="{style.rdBtn}"  />
		<m:MaterialTextBox ui:field="txtboxChoice" placeholder="choice" grid="s7 m7 l7"    />
		<m:MaterialIcon ui:field="btnRemoveChoice" grid="s2 m2 l2" icon="remove_circle" waves="default" addStyleNames="{style.remove}" />
	</m:MaterialRow>
</ui:UiBinder> 