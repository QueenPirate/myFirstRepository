<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@external category-active, category-inactive, category-start, pop-up-score; 
		.cat-name{
			height: 39px;
 			padding: 0px 20px;
  			font-size: 15px;
			padding-top: 10px;
			margin-right: -11px;
  			margin-left: -11px;
		}
		.icon{
			width: 100%;
			height: 100%;
		}
		.category-active{
			transition: none !important;
			position: absolute;
  			width: 100% !important;
  			top: 0;
  			z-index: 999;
  			text-align: center;
  			bottom: 0;
  			left: 0;
  			right: 0;
  			padding-top: 15% !important;
		}
		.category-inactive{
			transition: none !important;
		}
		.category-active .icon{
  			width: 300px;
  			margin: auto;
		}
		.category-active .cat-name{
			bottom: 0;
  			position: absolute;
  			width: 50%;
  			left: 25%;
  			font-size: 1.5em;
  			padding: 10px;
  			height: 50px;
  			text-align: left;
  			padding-left: 30px;
		}
		.category-active .arrow{
			display: block !important;
			position: absolute;
  			top: 10px;
		}
		.category-active  .startBtn{
			display: block !important;
			position: absolute;
  			bottom: 3%;
  			right: 29%;
		}
		.arrow{
			display: none;
		}
		.startBtn{
			display: none !important;
		}
		.btnDisplay{
			bottom: -7px;
 			position: absolute;
  			width: 50%;
  			left: 49%;
  			font-size: 1.5em;
  			padding: 10px;
 			height: 50px;
  			text-align: left;
  			padding-left: 30px;
		}
		.category-active .btnDisplay{
			display: none !important;
		}
		.category-start .startBtn{
			display: none !important;
		}
		.rowQuestions{
			display: none;
		}
		.category-start .rowQuestions{
			position: relative;
			display: block;
  			margin-top: -348px;
		}
		
		.nextBtn{
			display: none !important;
		}
		.category-start .nextBtn{
			display: block !important;
			margin: auto;
		}
		.panelScore{
			display: none;
		}
		.pop-up-score .startBtn{
			display: none !important;
		}
		.pop-up-score .panelScore{
			display: block;
			width: 238px;
  			position: absolute;
  			height: 228px;
  			top: 198px;
  			left: 450px;
		}
		.totalScore{
			display: none;
		}
		.category-start .totalScore{
			display: block !important;
			position: absolute;
			bottom: 0;
  			right: 316px;
		}
		.pop-up-score .totalScore{
			display: block !important;
			position: absolute;
			bottom: 0;
  			right: 316px;
		}
		.lblPopUpScore{
			padding-top: 45px;
		}		

	</ui:style>
	<m:MaterialColumn ui:field="colCategory" grid="s12 m6 l3" color="lighten-3">
	    <m:MaterialLink ui:field="btnBack" fontSize="3" textColor="black" icon="mdi-hardware-keyboard-backspace" addStyleNames="{style.arrow}"/>
	    <m:MaterialButton ui:field="btnStart" type="floating" waves="light" size="large" color="blue" icon="mdi-av-play-arrow" addStyleNames="{style.startBtn}" />
		<m:MaterialImage ui:field="imgPicture" addStyleNames="{style.icon}"/>
		<m:MaterialLink ui:field="lblIcon" textColor="white" icon="mdi-av-play-arrow" iconPosition="right" addStyleNames="{style.btnDisplay}" />
		<m:MaterialLink ui:field="lblName" addStyleNames="{style.cat-name} darken" />
		<m:MaterialButton ui:field="btnNext" type="floating" waves="light" size="large" color="red" icon="mdi-av-play-arrow" addStyleNames="{style.nextBtn}" />
		<m:MaterialColumn grid="s12 m6 l6" offset="m3 l3" ui:field="rowQuestions" addStyleNames="{style.rowQuestions}"/>
		
		
		
		<m:MaterialLink fontSize="3" ui:field="lblTotalScore" textColor="black" addStyleNames="{style.totalScore}" />
		<m:MaterialPanel ui:field="pnlScore" addStyleNames="{style.panelScore} darker">
	     	    <m:MaterialLink fontSize="7" ui:field="lblScore" textColor="black" addStyleNames="{style.lblPopUpScore}"></m:MaterialLink>
	     	</m:MaterialPanel>
	     
	</m:MaterialColumn>
	
</ui:UiBinder> 