<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panelMain{
			background: #fff;
		}
		.panel{
			background: url("http://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
			background-size: 100%;
			padding: 0px !important;
			  padding-top: 40% !important;
		}
		.fieldPanel{
			background: white;
			  padding: 6%;
		}
		.imgProfile{
			  margin-top: -120px;
			  width: 40%;
			  margin-left: 30%;
			  border: 5px solid #fff;
		}
		.rowAction{
			margin-top: 20px;
		}

	</ui:style>
	<m:MaterialPanel addStyleNames="{style.panelMain}">
		<m:MaterialRow>
		
			<m:MaterialColumn grid="s12 m4 l4" offset="l4"  >
					<m:MaterialTitle title="Login" description="Please provide your account credentials."/>
					<m:MaterialPanel padding="5" shadow="1" addStyleNames="{style.panel}">
						<m:MaterialPanel addStyleNames="{style.fieldPanel}">
							<m:MaterialImage url="http://b.vimeocdn.com/ps/339/488/3394886_300.jpg" type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1"/>
							<m:MaterialTextBox ui:field="txtEmailAdd" type="email" placeholder="Email"/>
							<m:MaterialTextBox ui:field="txtPassword" type="password" placeholder="Password" />
							<m:MaterialButton ui:field="btnLogin" backgroundColor="blue" waves="light" text="Log In" width="100%"/>
							
							<m:MaterialRow addStyleNames="center-align">
							    <m:MaterialColumn grid="s12 m12 l12">
								   	<m:MaterialButton ui:field="btnSignUp" backgroundColor="white" type="FLAT" text="Sign up for a new account" textColor="blue" ></m:MaterialButton>
								</m:MaterialColumn>
							</m:MaterialRow>
							
							<m:MaterialRow addStyleNames="{style.rowAction}">
								<m:MaterialColumn grid="s12 m12 l12">
									<m:MaterialCheckBox text="Keep me logged in"/>	
								</m:MaterialColumn>
							</m:MaterialRow>
						</m:MaterialPanel>
					</m:MaterialPanel >
			</m:MaterialColumn>
			
		</m:MaterialRow>
	</m:MaterialPanel>
</ui:UiBinder> 